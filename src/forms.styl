.input {
  display: block;
  width: 100%;
  padding: paddingMedium;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: borderRadius; // to remove border-radius on select
  box-shadow: none;
  appearance: none;
  &:focus {
    border-color: colors.primary;
    outline: 0;
  }
  if (colors.error) {
    &:focus:invalid {
      border-color: colors.error;
      color: colors.error;
    }
  }
  &[readonly],
  &[disabled],
  fieldset[disabled] & {
    background-color: #eee;
  }
  &[disabled],
  fieldset[disabled] & {
    cursor: not-allowed;
  }
}

textarea.input {
  min-height: 5rem;
}

